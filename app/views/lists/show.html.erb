<h1><%= @list.name %></h1>

<h2>Bookmarks</h2>
<% @list.movies.each do |movie| %>
  <p><%= movie.title %></p>
<% end %>

<h2>Add Bookmark</h2>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all %>
  <%= f.input :comment %>
  <%= f.submit "Add Bookmark", class: "btn btn-success" %>
<% end %>
